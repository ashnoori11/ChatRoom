@page
@model ChatRoom.Pages.SupportAgentModel
@{
}

<link href="~/css/Agent.css" rel="stylesheet" />

@section Scripts{
    <script src="~/js/Agent.js"></script>
}

<div class="jumbotron">
    <h1 class="display-4">All Rooms</h1>
    <p class="lead">welcom agent</p>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div id="roomList" class="list-group">
            </div>
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <ul id="chatHistory" class="card-body"></ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <form id="chatForm" class="form-inline mt-2">
                        <input id="messageTextbox" type="text" placeholder="Type a message" class="form-control mr-sm-2 flex-grow-1" />
                        <button type="submit" class="btn btn-primary">Send</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>